{% extends 'base.html.twig' %}

{% block title %}Nouveau produit -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class='d-flex flex-column align-items-center text-center'>
		<h1 class="my-3">Cr√©er un produit</h1>

		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

		{{ form_errors(form) }}

		{{ form_row(form.name) }}
		{{ form_row(form.description) }}
		{{ form_row(form.image_front) }}
		{{ form_row(form.image_profile) }}
		{{ form_row(form.image_top) }}
		{{ form_row(form.weight) }}
		{{ form_row(form.volume) }}
		{{ form_row(form.height) }}
		{{ form_row(form.length) }}
		{{ form_row(form.category) }}

		{{ form_widget(form.save, { 'label': 'Enregistrer' }) }}

		{{ form_end(form) }}
	</div>

	<div class="text-center">
		<a class="btn-edit btn btn-md btn-primary mx-2 my-2" href="{{ path('app_backoffice_home') }}">
			<i class="fas fa-reply-all"></i>
		</a>
	</div>

{% endblock %}