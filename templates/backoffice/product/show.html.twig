{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image_front</th>
                <td>{{ product.imageFront }}</td>
            </tr>
            <tr>
                <th>Image_profile</th>
                <td>{{ product.imageProfile }}</td>
            </tr>
            <tr>
                <th>Image_top</th>
                <td>{{ product.imageTop }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ product.weight }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ product.volume }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ product.height }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ product.length }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_product_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('backoffice/product/_delete_form.html.twig') }}
{% endblock %}
