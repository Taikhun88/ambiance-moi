{% extends 'base.html.twig' %}

{% block title %}Modifier utilisateur -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class='d-flex flex-column align-items-center text-center'>
		<h1 class="my-3">Modifier données de l'utilisateur</h1>
		{# form row specifically for edit and new instead of partials so we can have flexibility to use variable such as disabled on edit form fields #}

		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		{{ form_errors(form) }}

		{{ form_row(form.pseudo) }}
		{{ form_row(form.email) }}
		{{ form_row(form.password, { 'label':  'Mot de passe par défaut : 123456', 'disabled': true }) }}
		{{ form_row(form.avatar, { 'required': false } ) }}
		{{ form_widget(form.save, { 'label': 'Mettre à jour' }) }}

		{{ form_end(form) }}
	</div>

	<div class="text-center">
		<a class="btn-edit btn btn-md btn-primary mx-2 my-2" href="{{ path('app_backoffice_home') }}">
			<i class="fas fa-reply-all"></i>
		</a>
	</div>

{% endblock %}
